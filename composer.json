{
  "require": {
    "yiisoft/yii2": "2.0.11.2",
    "yiisoft/yii2-bootstrap": "2.0.6",
    "creocoder/yii2-taggable": "2.0.0",
    "jamband/ripple": "0.4.2",
    "hashids/hashids": "2.0.3"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "2.0.9",
    "yiisoft/yii2-gii": "2.0.5",
    "vlucas/phpdotenv": "2.4.0",
    "codeception/codeception": "2.2.10"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/jquery.inputmask": "*",
    "bower-asset/bootstrap": "*",
    "bower-asset/punycode": "*",
    "bower-asset/yii2-pjax": "*",
    "bower-asset/typeahead.js": "*"
  },
  "autoload": {
    "files": ["helpers/functions.php"]
  },
  "scripts": {
    "start": "composer ins && cd client && yarn && node_modules/.bin/webpack -p",
    "clean": "rm -rf client/node_modules runtime/* tests/_output/* vendor web/assets/*",
    "show-asset-version": "composer show -t | grep -o 'bower-asset.*' | sort | uniq"
  }
}
